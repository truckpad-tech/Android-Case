<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:layout_marginTop="60dp"
    android:elevation="6dp"
    android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_new_route_blue_gradient">

            <ImageView
                android:id="@+id/imageCloseNewRoute"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/ic_close_white"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:scrollbarFadeDuration="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:padding="24dp"
                android:orientation="vertical"
                android:background="@drawable/background_new_route_white">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rota"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#313131"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/editLocation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="50dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bakcground_input_truck"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:textColor="#616161"
                        android:textStyle="bold"
                        android:hint="Origem"
                        android:textColorHint="#BDBDBD"
                        android:drawableRight="@drawable/background_new_route_white"/>

                    <ImageView
                        android:id="@+id/imageMyLocation"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_my_location_grey"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.965"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"/>

                </android.support.constraint.ConstraintLayout>


                <EditText
                    android:id="@+id/editDestination"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:background="@drawable/bakcground_input_truck"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:textStyle="bold"
                    android:hint="ir para"
                    android:textColorHint="#BDBDBD"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#BDBDBD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CaminhÃ£o"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="#313131"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qtd. Eixos"
                                android:textStyle="bold"
                                android:textSize="16dp"/>
                            <EditText
                                android:id="@+id/editEixos"
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:background="@drawable/bakcground_input_truck"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#616161"
                                android:textStyle="bold"
                                android:textColorHint="#BDBDBD"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consumo Km/L"
                                android:textStyle="bold"
                                android:textSize="16dp"/>
                            <EditText
                                android:id="@+id/editFuelKm"
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:background="@drawable/bakcground_input_truck"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:textColor="#616161"
                                android:textStyle="bold"
                                android:textColorHint="#BDBDBD"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ Diesel"
                            android:textStyle="bold"
                            android:textSize="16dp"/>
                        <EditText
                            android:id="@+id/editValueFuel"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:background="@drawable/bakcground_input_truck"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:textColor="#616161"
                            android:textStyle="bold"
                            android:textColorHint="#BDBDBD"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutButtonRoute"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/background_button_blue_gradient"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calcular rota"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="#FFFFFF"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/ic_navigation_white"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
                </ScrollView>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>