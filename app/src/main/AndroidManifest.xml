<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.truckpad.waister">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.CustomApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB41bdl3cQO6V6IgEvpYiYq6k50SsGD3-8" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SearchLocationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/search_location"
            android:screenOrientation="unspecified" />
        <activity
            android:name=".ui.activity.ResultActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/result"
            android:screenOrientation="unspecified" />
        <activity
            android:name=".ui.activity.HistoryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/history"
            android:screenOrientation="unspecified" />
    </application>

</manifest>