<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>

        <item name="android:statusBarColor">@color/color_status_bar</item>

        <item name="toolbarStyle">@style/Widget.TruckPad.Toolbar</item>
        <item name="tabStyle">@style/Widget.TruckPad.Tabs</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!-- Widgets -->
    <style name="Widget.TruckPad" parent="@android:style/Widget.Material" />

    <style name="Widget.TruckPad.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Widget.TruckPad.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.TruckPad.Tab</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.TruckPad.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.TruckPad.Title" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TruckPad.Label" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TruckPad.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Calculator -->
    <style name="Widget.TruckPad.Calculator" />

    <style name="Widget.TruckPad.Calculator.InputField" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>

    <style name="Widget.TruckPad.Calculator.Title">
        <item name="android:background">@drawable/calculator_sheet_title_background</item>
        <item name="android:textAppearance">@style/TextAppearance.TruckPad.Title</item>
    </style>

    <!-- Calculator Search -->
    <style name="Widget.TruckPad.Calculator.Place">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableStart">@drawable/ic_place</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>

    <!-- Calculator Results -->
    <style name="Widget.TruckPad.Calculator.Results" />

    <style name="Widget.TruckPad.Calculator.Results.Label">
        <item name="android:textAppearance">@style/TextAppearance.TruckPad.Label</item>
    </style>

    <style name="Widget.TruckPad.Calculator.Results.Value">
        <item name="android:textAppearance">@style/TextAppearance.TruckPad.Body</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.TruckPad.Calculator.Results.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.TruckPad.Calculator.Results.ANTT" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Calculator History -->

    <style name="Widget.TruckPad.Calculator.History" />

    <style name="Widget.TruckPad.Calculator.History.Place">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.TruckPad.Calculator.History.Icon">
        <item name="android:drawablePadding">@dimen/spacing_small</item>
    </style>

</resources>
