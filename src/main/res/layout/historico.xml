<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Origem:"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_historigem"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView18"
                android:layout_marginLeft="10dp"
                android:text="Destino:" />

            <TextView
                android:id="@+id/tv_histdestino"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_historigem"
                android:layout_alignParentRight="true"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView24"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Distancia:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/tv_histdistancia"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_histdestino"
                android:layout_alignParentRight="true"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/tv_historigem" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView26"
                android:layout_marginLeft="10dp"
                android:text="Combustivel LTs:"
                app:layout_constraintStart_toEndOf="@+id/tv_historigem"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <TextView
                android:id="@+id/tv_histcombust"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_histdistancia"
                android:layout_alignParentRight="true"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/textView28"
                app:layout_constraintTop_toBottomOf="@+id/tv_histdestino" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView28"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Valor:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_histdistancia" />

            <TextView
                android:id="@+id/tv_histvalor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_histcombust"
                android:layout_alignParentRight="true"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/textView30"
                app:layout_constraintTop_toBottomOf="@+id/tv_histdistancia" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>