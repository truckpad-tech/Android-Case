<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="#FFFFFF"
    android:focusableInTouchMode="true"
    tools:context=".ActivityNewTruck">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbarFadeDuration="1"
        android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layoutBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/background_button_back_grey"
                android:gravity="center_vertical|center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_arrow_left_grey"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#313131"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:background="@drawable/background_box_location">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/navigation"/>
                        <TextView
                            android:id="@+id/textOrigin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#313131"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:background="@drawable/background_box_location">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/marker_blue"/>
                        <TextView
                            android:id="@+id/textDestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="#313131"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/labelDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Distância"
                        android:textSize="12dp"
                        android:textColor="#616161"/>
                    <TextView
                        android:id="@+id/textDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#313131"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/labelTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Tempo"
                        android:textSize="12dp"
                        android:textColor="#616161"/>
                    <TextView
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#313131"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/labelTruck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Caminhão"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#0277BD"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textEixos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#313131"/>

                    <TextView
                        android:id="@+id/textFuelUsage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#313131"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/labelDiesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#0277BD"/>

                        <TextView
                            android:id="@+id/textFuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#313131"/>

                        <TextView
                            android:id="@+id/labelValueFuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="Valor"
                            android:textSize="12dp"
                            android:textColor="#616161"/>
                        <TextView
                            android:id="@+id/textFuelValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#313131"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/labelToll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Pedágios"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#0277BD"/>

                        <TextView
                            android:id="@+id/textToll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#313131"/>

                        <TextView
                            android:id="@+id/labelCostToll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="Valor"
                            android:textSize="12dp"
                            android:textColor="#616161"/>
                        <TextView
                            android:id="@+id/textTollValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#313131"/>

                </LinearLayout>
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#BDBDBD"/>

        <TextView
            android:id="@+id/labelTabelANTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_vertical"
            android:text="Tabela ANTT"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#0277BD"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelFrigorifico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Frigorificada"
                    android:textSize="10dp"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/textFrigorifico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#313131"/>

                <TextView
                    android:id="@+id/labelGeral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="Geral"
                    android:textSize="10dp"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/textGeral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#313131"/>

                <TextView
                    android:id="@+id/labelGranel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="Granel"
                    android:textSize="10dp"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/textGranel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#313131"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/labelNeogranel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Neogranel"
                    android:textSize="10dp"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/textNeogranel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#313131"/>

                <TextView
                    android:id="@+id/labelPerigosa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/textPerigosa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#313131"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>