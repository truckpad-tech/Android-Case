<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="#313131"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="37.7749"
        mapbox:mapbox_cameraTargetLng="-122.4194"
        mapbox:mapbox_styleUrl="mapbox://styles/guedher/ckatrmnwv1yji1il81mxp89tb"
        mapbox:mapbox_cameraZoom="-20">


    </com.mapbox.mapboxsdk.maps.MapView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="68dp"
        android:gravity="center_horizontal"
        android:elevation="4dp"
        android:orientation="vertical"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabHistoric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/background_button_blue_gradient"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_historic_white" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabTruck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/background_button_blue_gradient"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_truck_white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/background_button_blue_gradient"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_add_white" />
    </LinearLayout>


    <include
        android:id="@+id/layout_progress"
        layout="@layout/layout_progress"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/layoutNewRoute"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/background_layout_search_bottom"
        android:elevation="5dp"
        mapbox:layout_constraintBottom_toBottomOf="@+id/layout_progress"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Para onde iremos?"
            android:theme="@style/input_search"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_navigation_blue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRoute"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="6dp"
        android:orientation="vertical">
        <include
            android:id="@+id/layout"
            layout="@layout/layout_new_route"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInformation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="6dp"
        android:orientation="vertical">
        <include
            layout="@layout/layout_item_information_route"
            android:visibility="visible"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>