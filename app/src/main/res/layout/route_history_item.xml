<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/origin_text_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#000"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/origin_text_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/origin_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origem: "
            android:textColor="#000"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/destination_text_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:textColor="#000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toRightOf="@+id/destination_description_field"
            android:layout_below="@+id/origin_text_card_view"
            />
        <TextView
            android:id="@+id/destination_description_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino: "
            android:textColor="#000"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/origin_text_card_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>